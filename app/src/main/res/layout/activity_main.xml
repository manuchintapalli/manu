<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E8EAF6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STEAMER"
        android:id="@+id/spotifyButton"
        android:layout_marginTop="50dp"
        android:background="#F44336"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresButton"
        android:layout_below="@+id/spotifyButton"
        android:layout_marginTop="10dp"
        android:background="#EC407A"
        android:layout_alignLeft="@+id/spotifyButton"
        android:layout_alignStart="@+id/spotifyButton"
        android:layout_alignRight="@+id/spotifyButton"
        android:layout_alignEnd="@+id/spotifyButton"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryButton"
        android:layout_below="@+id/scoresButton"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:layout_alignLeft="@+id/scoresButton"
        android:layout_alignStart="@+id/scoresButton"
        android:layout_alignRight="@+id/scoresButton"
        android:layout_alignEnd="@+id/scoresButton"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/libraryButton"
        android:background="#2196F3"
        android:layout_alignLeft="@+id/libraryButton"
        android:layout_alignStart="@+id/libraryButton"
        android:layout_alignRight="@+id/libraryButton"
        android:layout_alignEnd="@+id/libraryButton"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzButton"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#00695C"
        android:layout_below="@+id/buildButton"
        android:layout_alignLeft="@+id/buildButton"
        android:layout_alignStart="@+id/buildButton"
        android:layout_alignRight="@+id/buildButton"
        android:layout_alignEnd="@+id/buildButton"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstoneButton"
        android:background="#C0CA33"
        android:layout_below="@+id/xyzButton"
        android:layout_alignLeft="@+id/xyzButton"
        android:layout_alignStart="@+id/xyzButton"
        android:layout_alignRight="@+id/xyzButton"
        android:layout_alignEnd="@+id/xyzButton"
        android:onClick="sendMessage"/>

</RelativeLayout>
